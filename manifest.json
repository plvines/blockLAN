{
    "incognito":"split",
    "name": "blockLAN", 
    "manifest_version": 2, 
    "version": "0.0.1",
    "icons": {
        "128": "128.png", 
        "48": "48.png", 
        "16": "16.png"
    }, 
    "background": {
        "persistent": true, 
        "scripts": [
            "Background.js"
        ]
    }, 
    "permissions": [
        "webRequest", 
        "webRequestBlocking",
        "http://*/*",
        "https://*/*",
        "ftp://*/*",
        "notifications"
    ], 
    "browser_action": {
        "default_title": "blockLAN",
        "default_popup": "Popup.html"
    },
    "description": "Blocks LAN requests to protect your router."
}
